<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lines_background"
    tools:context=".HostRoomActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="430dp">

        <ImageView
            android:layout_width="370dp"
            android:layout_height="308.33dp"
            android:src="@drawable/categories_background" />

        <ImageButton
            android:id="@+id/name_b"
            android:layout_width="60dp"
            android:layout_height="32.3dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/name_b3"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"/>

        <ImageButton
            android:id="@+id/animal_b"
            android:layout_width="50dp"
            android:layout_height="33.33dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/animal_b"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="70dp"/>

        <ImageButton
            android:id="@+id/thing_b"
            android:layout_width="60dp"
            android:layout_height="32.3dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/thing_b"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="100dp"/>

        <ImageButton
            android:id="@+id/place_b"
            android:layout_width="60dp"
            android:layout_height="32.3dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/place_b"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="55dp"/>

        <ImageButton
            android:id="@+id/plant_b"
            android:layout_width="50dp"
            android:layout_height="24.5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/plant_b"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="155dp"/>


        <ImageView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/red_underline"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="60dp"/>

        <EditText
            android:id="@+id/category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Δικιά σου"
            android:maxLines="1"
            android:textSize="15sp"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:background="@null"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="167dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="70dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="167dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/nickname"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="282dp" />

        <EditText
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ψευδώνυμο"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@null"/>
    </RelativeLayout>


    <ImageButton
        android:id="@+id/the_room"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginBottom="68dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/room" />


</androidx.constraintlayout.widget.ConstraintLayout>