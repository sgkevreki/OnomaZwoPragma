<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/join_host"
    tools:context=".HostRoomActivity">

    <TextView
        android:id="@+id/database_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="186dp"
        android:layout_marginLeft="186dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="157dp"
        android:layout_marginRight="157dp"
        android:text="DATABASE TEST"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/the_room" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="250dp"
        android:layout_height="208dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="167dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings"
        android:layout_marginTop="35dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="167dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/nickname"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="282dp" />

        <EditText
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ψευδώνυμο"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@null"/>
    </RelativeLayout>


    <ImageButton
        android:id="@+id/the_room"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginBottom="68dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/room" />
</androidx.constraintlayout.widget.ConstraintLayout>